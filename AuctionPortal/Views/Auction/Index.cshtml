@model AuctionPortal.Models.View.SearchModel;

@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col-sm-12">
        <form asp-controller="Auction" asp-action="Search" class="form-inline align-items-center">
            <div class="form-group mr-3 ml-5 pl-3">
                <input type="text" value="" asp-for="name" class="form-control" placeholder="Auction name"/>
            </div>
            <div class="form-group mr-3">
                <input type="number" asp-for="minPrice" value="" class="form-control" placeholder="Minimal price">
            </div>
            
            <div class="form-group mr-3">
                <input type="number" asp-for="maxPrice" value="" class="form-control" placeholder="Maximal price">
            </div>
            <div class="form-group mr-5">
                <select asp-for="state" class="custom-select">  
                    <option value="">Choose State</option>  
                    <option value="1">DRAFT</option>  
                    <option value="2">READY</option>
                    <option value="3">OPEN</option>
                    <option value="4">SOLD</option>  
                    <option value="5">EXPIRED</option>
                    <option value="6">DELETED</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

<br>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Starting price
            </th>
            <th>
                Creation date and time
            </th>
            <th>
                Opening date and time
            </th>
            <th>
                Closing date and time
            </th>
            <th>
                State
            </th>
            <th>
                Accession
            </th>
            <th>
                Image
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.auctionList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.auction.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.auction.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.auction.startingPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.auction.creationDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.auction.openingDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.auction.closingDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.auction.state)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.auction.accession)
            </td>
            <td>
                <img src="data:image/png;base64,@item.base64Data" / style="height: 150px; width: 150px;">
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.auction.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.auction.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.auction.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
